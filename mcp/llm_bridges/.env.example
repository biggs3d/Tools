# LLM Bridges Unified Configuration
# Copy this file to .env and fill in your API keys

# ===========================================
# API Keys (at least one required)
# ===========================================
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key
XAI_API_KEY=your-grok-api-key

# Organization ID for OpenAI (optional)
OPENAI_ORGANIZATION_ID=

# ===========================================
# Default Models (used when model not specified)
# ===========================================
GEMINI_DEFAULT_MODEL=gemini-2.5-pro
OPENAI_DEFAULT_MODEL=gpt-5
GROK_DEFAULT_MODEL=grok-4-0709

# ===========================================
# Model Allowlists (comma-separated)
# ===========================================
# Leave empty to allow all models from the provider
GEMINI_ALLOWED_MODELS=gemini-2.5-pro
OPENAI_ALLOWED_MODELS=gpt-5, gpt-5-2025-08-07
GROK_ALLOWED_MODELS=grok-4-0709

# ===========================================
# File Handling Limits
# ===========================================
MAX_FILE_SIZE=26214400  # 25MB in bytes
MAX_FILES_PER_REQUEST=50  # Maximum number of files to process in a single request
GEMINI_MAX_TOTAL_TOKENS=900000   # Leave room in 1M context
OPENAI_MAX_TOTAL_TOKENS=390000   # Conservative (GPT-5 is 400k)
GROK_MAX_TOTAL_TOKENS=250000     # Conservative (Grok4 is 256k)

# Security: Allow files outside project directory (default: true)
# Set to false to restrict file access to project directory only
ALLOW_EXTERNAL_FILES=true

# ===========================================
# Response Timeouts (in minutes)
# ===========================================
GEMINI_TIMEOUT_MIN=5
OPENAI_TIMEOUT_MIN=10
GROK_TIMEOUT_MIN=10

# ===========================================
# File Discovery
# ===========================================
EXCLUDED_EXTENSIONS=.exe,.dll,.so,.dylib,.zip,.tar,.gz,.rar,.7z,.jpg,.jpeg,.png,.gif,.bmp,.ico,.webp,.mp3,.mp4,.avi,.mov,.wmv,.flv,.webm,.woff,.woff2,.ttf,.eot,.otf,.db,.sqlite,.lock
FORCE_TEXT_EXTENSIONS=.svg
EXCLUDED_DIRS=node_modules,.git,dist,build,coverage,.next,.nuxt,vendor,__pycache__,.pytest_cache,venv,.venv
BINARY_CHECK_BYTES=8192
MAX_RECURSION_DEPTH=10
# Whether to follow symbolic links (false = safer)
FOLLOW_SYMLINKS=false

# ===========================================
# Parallel Execution
# ===========================================
ENABLE_PARALLEL=true

# ===========================================
# Rate Limiting
# ===========================================
# Max requests per minute per provider (0 = disabled)
RATE_LIMIT_PER_MINUTE=60
# Delay between requests in ms when rate limited
RATE_LIMIT_DELAY_MS=1000

# ===========================================
# Feature Flags
# ===========================================
AUTO_FETCH_GEMINI_MODELS=true
ENABLE_ITERATIVE_REFINEMENT=false

# ===========================================
# Embedding Models (for future use)
# ===========================================
GEMINI_EMBEDDING_MODEL=text-embedding-004
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_BATCH_SIZE=10