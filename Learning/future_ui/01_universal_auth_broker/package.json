{
  "name": "@future-ui/auth-broker",
  "version": "0.1.0",
  "description": "Universal Auth Broker - A unified authentication service for all auth patterns",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:smoke": "tsx tests/smoke.test.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "update-deps": "npm update && npm audit fix"
  },
  "keywords": [
    "authentication",
    "oauth2",
    "jwt",
    "saml",
    "auth-broker"
  ],
  "author": "Future UI Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "fastify": "^5.4.0",
    "jose": "^6.0.12",
    "pino": "^9.7.0",
    "zod": "^3.25.76",
    "dotenv": "^17.2.1",
    "@prisma/client": "^6.13.0",
    "ioredis": "^5.4.1",
    "p-retry": "^6.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "prisma": "^6.13.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4",
    "pino-pretty": "^11.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}