# LLM Provider selection
# Uncomment one of these to select which provider to use by default
# If none are specified, the system will check which API key is available
LLM_PROVIDER=openai
# LLM_PROVIDER=anthropic
# LLM_PROVIDER=azure-openai

# OpenAI configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo
# OPENAI_ORGANIZATION=your_org_id_if_applicable

# Anthropic configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Azure OpenAI configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name
AZURE_OPENAI_RESOURCE_NAME=your_resource_name
AZURE_OPENAI_API_VERSION=2023-05-15
# Optional: Separate embedding model deployment
# AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding