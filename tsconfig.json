{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "DOM"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "@mcp/database-services": ["packages/database-services/src/index.ts"],
      "@mcp/database-services/*": ["packages/database-services/src/*"],
      "@mcp/llm-package": ["packages/llm-package/src/index.ts"],
      "@mcp/llm-package/*": ["packages/llm-package/src/*"],
      "@mcp/memory-services": ["packages/memory-services/src/index.ts"],
      "@mcp/memory-services/*": ["packages/memory-services/src/*"],
      "@mcp/shared-types": ["packages/shared-types/src/index.ts"],
      "@mcp/shared-types/*": ["packages/shared-types/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}